{
    "name": "native-wechat",
    "version": "1.0.5",
    "description": "A React Native library for supporting Wechat APIs on Android and iOS",
    "react-native": "src/index",
    "main": "src/index",
    "scripts": {
        "prepare": "husky install"
    },
    "files": [
        "src",
        "android",
        "ios",
        "RTNWechat.podspec",
        "!android/build",
        "!ios/build",
        "!**/__tests__",
        "!**/__fixtures__",
        "!**/__mocks__"
    ],
    "keywords": [
        "react-native",
        "ios",
        "android"
    ],
    "repository": "https://github.com/Hector-Chong/native-wechat",
    "author": "HÃ©ctor Chong <i@hector.im> (https://github.com/Hector-Chong)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Hector-Chong/native-wechat/issues"
    },
    "homepage": "https://github.com/Hector-Chong/native-wechat#readme",
    "devDependencies": {
        "@react-native-community/eslint-config": "^2.0.0",
        "prettier": "^2.5.1",
        "@typescript-eslint/parser": "^5.30.0",
        "@typescript-eslint/eslint-plugin": "^4.15.1",
        "eslint": "7.32.0",
        "git-cz": "^4.9.0",
        "husky": "^8.0.0",
        "cz-conventional-changelog": "3.3.0",
        "commitizen": "^4.2.4",
        "react-native": "^0.70.5"
    },
    "peerDependencies": {
        "react": "*",
        "react-native": "*"
    },
    "codegenConfig": {
        "name": "NativeWechatSpec",
        "type": "modules",
        "jsSrcsDir": "src",
        "android": {
            "javaPackageName": "com.hector.nativewechat"
        }
    },
    "config": {
        "commitizen": {
            "path": "node_modules/git-cz"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "exec < /dev/tty && npx cz --hook || true",
            "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
        }
    }
}